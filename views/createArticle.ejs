<%- include ('partials/header') -%>
    <div class="container">
        <div class="article-form">
            <form action='/createArticle' method='POST'>
                <div class="form-group">
                    <label for="articleImage">Add image</label>
                    <input type="file" class="form-control-file" id="articleImage">
                </div>
                <div class=" form-group">
                    <label for="articleSuptitle ">Author name:</label>
                    <input type="text" class="form-control" name="articleSuptitle" id="articleSuptitle" required='true' autocomplete="off">
                </div>
                <div class="form-group ">
                    <label for="articleTitle ">Title:</label>
                    <input type="text" class="form-control" name="articleTitle" id="articleTitle" required='true' autocomplete="off">
                </div>
                <div class="form-group">
                    <label for="articleText">Content:</label>
                    <textarea class="form-control " id="articleText" name="articleText" rows="10" required='true'></textarea>
                </div>

                <button type="submit" class="btn btn-success">Submit</button>
                <a href="/" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
